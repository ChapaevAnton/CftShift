<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_graph"
    app:startDestination="@id/auth_user">

    <fragment
        android:id="@+id/auth_user"
        android:name="com.w4eret1ckrtb1tch.homework.ui.fragment.auth.AuthorizationFragment"
        android:label="auth_user"
        tools:layout="@layout/fragment_authorization">

        <action
            android:id="@+id/action_auth_user_to_loan_list"
            app:destination="@id/loan_list"
            app:popUpTo="@id/auth_user"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_auth_user_to_reg_user"
            app:destination="@id/reg_user" />
        <argument
            android:name="user"
            app:argType="com.w4eret1ckrtb1tch.homework.domain.entity.UserEntity"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/loan_list"
        android:name="com.w4eret1ckrtb1tch.homework.ui.fragment.loanslist.LoansListFragment"
        android:label="loan_list"
        tools:layout="@layout/fragment_loans_list" >
        <argument
            android:name="authToken"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/reg_user"
        android:name="com.w4eret1ckrtb1tch.homework.ui.fragment.reg.RegistrationUserFragment"
        android:label="reg_user"
        tools:layout="@layout/fragment_user_registration" >
        <action
            android:id="@+id/action_reg_user_to_auth_user"
            app:destination="@id/auth_user"
            app:launchSingleTop="true"
            app:popUpTo="@id/auth_user"
            app:popUpToInclusive="false" />
    </fragment>

</navigation>