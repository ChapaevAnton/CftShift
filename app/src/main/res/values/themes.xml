<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.Text.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Text.Subtitle1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Text.Body2</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.TextButton</item>
        <item name="imageButtonStyle">@style/Widget.App.ImageButton</item>
        <item name="snackbarTextViewStyle">@style/Snackbar.TextView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="background">@color/gray</item>
        <item name="progressBarStyle">@style/Widget.App.ProgressBar</item>
    </style>
</resources>